{% extends "layout.twig" %}

{% block title %}404 - Page Not Found{% endblock %}

{% block content %}
{% include 'components/header.twig' with {'variant': user ? 'app' : 'landing'} %}

<div class="flex-1 flex items-center justify-center bg-gray-50 py-20">
    <div class="text-center">
        <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Page Not Found</h2>
        <p class="text-gray-600 mb-8">The page you're looking for doesn't exist.</p>
        <a href="{{ path('/') }}" class="inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-colors">
            Go Home
        </a>
    </div>
</div>

{% include 'components/footer.twig' %}
{% endblock %}
