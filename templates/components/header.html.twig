<header class="border-b bg-white/80 backdrop-blur-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <a href="{{ path('/') }}" class="flex items-center gap-2">
                <div class="w-8 h-8 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                    </svg>
                </div>
                <span class="font-semibold text-gray-900">TicketFlow</span>
            </a>

            <nav class="flex items-center gap-4">
                {% if variant == 'landing' and not user %}
                    <a href="{{ path('/login') }}" class="px-4 py-2 text-gray-700 hover:text-gray-900">Login</a>
                    <a href="{{ path('/signup') }}" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">Get Started</a>
                {% endif %}

                {% if user %}
                    <div class="relative">
                        <button id="user-menu-button" type="button" aria-haspopup="true" aria-expanded="false" class="h-10 w-10 rounded-full bg-indigo-600 text-white flex items-center justify-center font-semibold hover:opacity-80 transition-opacity">
                            {{ user.name|slice(0, 2)|upper }}
                        </button>

                        <div id="user-menu" class="absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 hidden" role="menu" aria-labelledby="user-menu-button">
                            <div class="px-4 py-3">
                                <p class="text-sm font-medium text-gray-900">{{ user.name }}</p>
                                <p class="text-sm text-gray-500 truncate">{{ user.email }}</p>
                            </div>

                            <div class="py-1">
                                <a href="{{ path('/dashboard') }}" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    Dashboard
                                </a>
                                <a href="{{ path('/tickets') }}" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                                    </svg>
                                    Manage Tickets
                                </a>
                            </div>

                            <div class="py-1">
                                <a href="{{ path('/logout') }}" class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                    </svg>
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- theme toggle -->
                <button id="theme-toggle" aria-pressed="false" title="Toggle dark mode" class="ml-2 p-2 rounded-md bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200">
                    <svg id="theme-toggle-light" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor"><path d="M10 4.5a.75.75 0 01.75-.75h0a.75.75 0 010 1.5H10.75A.75.75 0 0110 4.5zM10 15.25a.75.75 0 01.75-.75h0a.75.75 0 010 1.5H10.75a.75.75 0 01-.75-.75zM4.5 10a.75.75 0 01-.75-.75h0a.75.75 0 011.5 0V10a.75.75 0 01-.75.75zM15.25 10a.75.75 0 01-.75-.75h0a.75.75 0 011.5 0V10a.75.75 0 01-.75.75zM6.47 6.47a.75.75 0 010-1.06h0a.75.75 0 011.06 1.06L6.47 6.47zM13.53 13.53a.75.75 0 010-1.06h0a.75.75 0 011.06 1.06L13.53 13.53zM6.47 13.53a.75.75 0 010-1.06h0a.75.75 0 011.06 1.06L6.47 13.53zM13.53 6.47a.75.75 0 010-1.06h0a.75.75 0 011.06 1.06L13.53 6.47z"/></svg>
                    <svg id="theme-toggle-dark" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" viewBox="0 0 20 20" fill="currentColor"><path d="M17.293 13.293A8 8 0 116.707 2.707 6 6 0 1017.293 13.293z"/></svg>
                </button>
            </nav>
        </div>
    </div>
</header>
