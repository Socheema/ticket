DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    # Adjust this if the project isn't served from /twig/
    RewriteBase /twig/

    # Don't rewrite existing files or directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite everything else to index.php
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Fallback for servers without mod_rewrite (nothing to do here)<IfModule mod_rewrite.c>
    RewriteEngine On

    # Base path (adjust if you install to another subdirectory)
    RewriteBase /twig/

    # If the request is for an existing file or directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise route the request to index.php
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]
</IfModule>

# Ensure index.php is the default DirectoryIndex
DirectoryIndex index.php
